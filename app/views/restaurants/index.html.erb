<h1>index</h1>

<% @restaurants.each do |restaurant| %>

	<div class="restaurant-container-index">
		
		<img class="img-index" src="<%= restaurant.image_url %>">
		<div class="restaurant-info-index"> 
			<h3><%= restaurant.name %></h3>
			<div class="rating"><%= restaurant.rating%></div>
			<div class="price"><%= restaurant.price %></div>
			<div class="vegan"><%= restaurant.vegan_friendly %></div>
			<div class="vegitarian"><%= restaurant.vegitarian_friendly %></div>
		</div>

	</div>

<%end%>